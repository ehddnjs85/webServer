<div class="container mt-5">
    <div class="row">
        <div class="col-sm-9 col-md-6 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Login</h5>
                    <p class="text-center" style="display:none;">You can't access the administration panel.</p>
                    <form id="loginForm" action="/" method="post" novalidate>
                        <!-- User name -->
                        <div class="form-label-group">
                            <label for="user">User Name</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="User Name" required />
                            <div class="invalid-feedback">Please provide a valid state.</div>
                        </div><br/>

                        <!-- Password -->
                        <div class="form-label-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required />
                            <div class="invalid-feedback">Please provide a valid state.</div>
                        </div><br/>

                        <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase" id="signIn">Sign in</button><br/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="loginInfoModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle" aria-hidden="true">
    <div class="modal-sm modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border: 1pt solid black"> 
            <div class="modal-header">
                <h4 class="modal-info-title" id="loginInfoModalTitle">Information</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body text-center">
                <i style="font-size: 30px;" class="mdi dripicons-warning"></i>
                <b><div class="text-break" id="div-select-info"></div></b>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>